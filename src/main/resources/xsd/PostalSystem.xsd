<xsd:schema xmlns:tns="https://aerosimo.com/api/ws/postalsystem" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
           version="1.0" targetNamespace="https://aerosimo.com/api/ws/postalsystem">
    <xsd:element name="sendEmail" type="tns:sendEmail"/>
    <xsd:element name="sendEmailResponse" type="tns:sendEmailResponse"/>
    <xsd:complexType name="sendEmail">
        <xsd:sequence>
            <xsd:element name="emailAddress" type="xsd:string"/>
            <xsd:element name="emailSubject" type="xsd:string"/>
            <xsd:element name="emailMessage" type="xsd:string"/>
            <xsd:element name="emailFiles" type="xsd:string" minOccurs="0"/>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType name="sendEmailResponse">
        <xsd:sequence>
            <xsd:element name="Status" type="xsd:string" minOccurs="0"/>
        </xsd:sequence>
    </xsd:complexType>
</xsd:schema>